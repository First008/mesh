# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /build

# Install build dependencies
RUN apk add --no-cache git ca-certificates

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the agent binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o mesh-agent ./cmd/agent

# Runtime stage
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache ca-certificates git

WORKDIR /app

# Copy binary from builder
COPY --from=builder /build/mesh-agent .

# Create directory for repo mount
RUN mkdir -p /repo

# Expose default port
EXPOSE 8080

# Run the agent
CMD ["./mesh-agent", "-config", "/config.yaml"]
